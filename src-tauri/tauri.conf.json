{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PatchPilot",
  "version": "0.1.0",
  "identifier": "com.firegnu.patchpilot",
  "build": {
    "beforeDevCommand": "(cd ../client && npm run dev) || (cd client && npm run dev)",
    "beforeBuildCommand": "(cd ../client && npm run build) || (cd client && npm run build)",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../client/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "PatchPilot",
        "width": 1100,
        "height": 760,
        "resizable": true
      }
    ]
  }
}
